{
  "name": "oblivion",
  "version": "0.1.0",
  "description": "A static site generator that is barely there.",
  "main": "oblivion.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "browserify --standalone 'oblivion' index.js -d -p [minifyify --map oblivion.map.json --output oblivion.map.json] > oblivion.js",
    "watch": "watchify --standalone 'oblivion' index.js -o oblivion.js --debug"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/lejeunerenard/oblivion.git"
  },
  "keywords": [
    "static",
    "site",
    "generator",
    "markdown"
  ],
  "author": "lejeunerenard",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lejeunerenard/oblivion/issues"
  },
  "homepage": "https://github.com/lejeunerenard/oblivion",
  "devDependencies": {
    "browserify": "^11.1.0",
    "minifyify": "^7.0.6",
    "watchify": "^3.4.0"
  },
  "dependencies": {
    "es6-promise": "^3.0.2",
    "github-api": "^0.10.6",
    "meta-marked": "^0.3.4"
  }
}
